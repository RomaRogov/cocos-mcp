{
    "$schema": "./@types/schema/package/index.json",
    "package_version": 2,
    "name": "cocos-mcp",
    "version": "1.0.0",
    "author": "Roma Rogov",
    "editor": ">=3.8.6",
    "scripts": {
        "preinstall": "node ./scripts/preinstall.js",
        "build": "npx tsc"
    },
    "description": "i18n:cocos-mcp.description",
    "main": "./dist/main.js",
    "dependencies": {
        "vue": "^3.1.4",
        "fs-extra": "^10.0.0",
        "@modelcontextprotocol/sdk": "^1.0.0",
        "zod": "^3.22.0",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@cocos/creator-types": "^3.8.6",
        "@types/fs-extra": "^9.0.5",
        "@types/node": "^18.17.1",
        "@types/express": "^4.17.17",
        "typescript": "^5.8.2"
    },
    "panels": {
        "default": {
            "title": "cocos-mcp Default Panel",
            "type": "dockable",
            "main": "dist/panels/default",
            "size": {
                "min-width": 400,
                "min-height": 300,
                "width": 1024,
                "height": 600
            }
        }
    },
    "contributions": {
        "scene": {
            "script": "./dist/scene/index.js"
        },
        "menu": [
            {
                "path": "i18n:menu.panel/cocos-mcp",
                "label": "i18n:cocos-mcp.open_panel",
                "message": "open-panel"
            }
        ],
        "messages": {
            "open-panel": {
                "methods": [
                    "openPanel"
                ]
            },
            "generate-image-from-svg": {
                "methods": [
                    "default.generate-image-from-svg"
                ]
            },
            "start-mcp-server": {
                "methods": [
                    "startMcpServer"
                ]
            },
            "stop-mcp-server": {
                "methods": [
                    "stopMcpServer"
                ]
            },
            "get-mcp-server-info": {
                "methods": [
                    "getMcpServerInfo"
                ]
            },
            "update-mcp-server-config": {
                "methods": [
                    "updateMcpServerConfig"
                ]
            }
        }
    }
}
